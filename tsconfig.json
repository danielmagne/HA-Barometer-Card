{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "strict": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "typeRoots": ["src/types", "node_modules/@types"]
  },
  "include": [
    "src/**/*",
    "src/types/**/*"
  ]
}
